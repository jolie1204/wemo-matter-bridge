# Copy to /etc/wemo-bridge/wemo-bridge.env and edit paths for your host.

# Binaries
WEMO_CTRL_BIN=/opt/wemo-bridge/bin/wemo_ctrl
WEMO_BRIDGE_BIN=/opt/wemo-bridge/bin/wemo-bridge-app
WEMO_ENGINE_LIBDIR=/opt/wemo-bridge/bin

# Runtime data
WEMO_DEVICE_DB=/opt/wemo-bridge/var/wemo/wemo_device.db
WEMO_STATE_DB=/opt/wemo-bridge/var/wemo/wemo_state.db
WEMO_DEVICE_DB_PATH=/opt/wemo-bridge/var/wemo/wemo_device.db
WEMO_STATE_DB_PATH=/opt/wemo-bridge/var/wemo/wemo_state.db
CHIP_KVS_FILE=/opt/wemo-bridge/var/chip/chip_kvs

# Logs
WEMO_CTRL_LOG=/opt/wemo-bridge/var/log/wemo_ctrl.log
WEMO_BRIDGE_LOG=/opt/wemo-bridge/var/log/wemo_bridge.log

# Network
BRIDGE_INTERFACE_ID=eth0
BRIDGE_EXTRA_ARGS=

# Startup timing (seconds)
WEMO_CTRL_WARMUP_SECS=8

